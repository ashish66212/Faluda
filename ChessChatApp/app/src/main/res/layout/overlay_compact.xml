<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E0263238"
    android:orientation="vertical"
    android:padding="8dp"
    android:elevation="10dp">

    <!-- Control Buttons Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="ðŸ¤– Auto Start"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:background="@android:drawable/btn_default" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="â¹ Stop"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:background="@android:drawable/btn_default" />
    </LinearLayout>

    <!-- Status Display -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âšª Ready"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="4dp"
        android:background="#80000000" />

    <!-- Auto-Play Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp">

        <CheckBox
            android:id="@+id/autoPlayCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-Play"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:paddingStart="4dp" />
    </LinearLayout>

    <!-- Update API Button -->
    <Button
        android:id="@+id/updateApiButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ðŸ”— Update API"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/btn_default" />

    <!-- Manual Board Setup Button -->
    <Button
        android:id="@+id/manualSetupButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ðŸ“ Manual Setup"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/btn_default" />

    <!-- LIVE LOG VIEW with Copy Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“‹ LIVE LOG:"
            android:textSize="10sp"
            android:textColor="#FFEB3B"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/copyLogsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹"
            android:textSize="18sp"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <ScrollView
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:background="#DD000000"
        android:padding="4dp">

        <TextView
            android:id="@+id/liveLogTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for actions..."
            android:textSize="9sp"
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:padding="4dp" />
    </ScrollView>

    <!-- Minimize Button -->
    <Button
        android:id="@+id/minimizeButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ðŸ¤– Minimize"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/btn_default" />

</LinearLayout>
